{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/api/controllers/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "name": "*",
        "type": "jwt"
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "src/api/middlewares/auth.middleware.ts"
  }
}
